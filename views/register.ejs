<html id="registerhtml">
  <%- include('./partials/header.ejs') %>
  <body>
    <main>
      <h1 id="registerh1">Register to Search Stock Market Databases</h1>
      <p id="error"><% if(messages.error) { %> <%= messages.error %> <% } %></p>
      <form action="/register" method="POST">
        <div>
          <label id="registerlabels" for="name">Name</label>
          <input type="text" id="name" name="name" required />
        </div>
        <div>
          <label id="registerlabels" for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div>
          <label id="registerlabels" for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>
        <button id="registerbutton" type="submit">Register</button>
      </form>
      <a id="login" href="/login">Already signed up? Login here!</a>
    </main>
    
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=BIZ+UDPMincho&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">
<%- include('./partials/footer.ejs') %>
  </body>
</html>
